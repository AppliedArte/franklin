# Application
APP_NAME=AIWealth
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/aiwealth

# Redis
REDIS_URL=redis://localhost:6379/0

# AI/LLM
ANTHROPIC_API_KEY=your-anthropic-key-here
OPENAI_API_KEY=your-openai-key-here

# Communication Channels

# WhatsApp Provider: wasender, twilio, or 360dialog
WHATSAPP_PROVIDER=wasender

# WasenderAPI (Cheapest - $6/mo for validation)
WASENDER_API_KEY=your-wasender-key
WASENDER_DEVICE_ID=your-device-id

# Twilio (WhatsApp & Voice) - More reliable, $0.005/msg markup
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890
TWILIO_PHONE_NUMBER=+1234567890

# Zoho Mail SMTP
ZOHO_SMTP_HOST=smtp.zoho.com
ZOHO_SMTP_PORT=587
ZOHO_SMTP_USER=franklin@askfranklin.xyz
ZOHO_SMTP_PASS=your-app-specific-password
EMAIL_FROM=franklin@askfranklin.xyz

# Vapi (Voice AI)
VAPI_API_KEY=your-vapi-key
VAPI_PHONE_NUMBER_ID=your-vapi-phone-number-id

# ElevenLabs Voice (get voice ID from ElevenLabs dashboard)
ELEVENLABS_VOICE_ID=your-custom-voice-id

# Twitter/X API (Free tier - 500 posts/month for public content)
# Get credentials at: https://developer.twitter.com/
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Telegram Bot
# Get token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_SECRET=optional-webhook-secret
